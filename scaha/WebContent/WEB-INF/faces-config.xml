<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	<managed-bean>
		<managed-bean-name>profileBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.ProfileBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>roletreeBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.RoleTreeBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>picklistRoleBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.PicklistRoleBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
		<managed-bean>
		<managed-bean-name>tabtrackBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.TabTrackBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usahBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.UsaHockeyBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.RegistrationBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>forgotpasswordBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.ForgotPasswordBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>draftplayersBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.DraftPlayersBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loiBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.loiBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>teamBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.teamBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>reviewloiBean</managed-bean-name>
		<managed-bean-class>com.scaha.beans.reviewloiBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<validator>
		<description>This will validate the Username to ensure its unique in the system</description>
		<display-name>User Name Validator</display-name>
		<validator-id>validateUserName</validator-id>
		<validator-class>com.scaha.validators.UserNameValidator</validator-class>
	</validator>
	<validator>
		<description>This validates the Password.. it has to match two input fields</description>
		<display-name>Password Confirmation Validator</display-name>
		<validator-id>confirmPasswordValidator</validator-id>
		<validator-class>com.scaha.validators.ConfirmPasswordValidator</validator-class>
	</validator>
	<validator>
		<description>This validates the Email to ensure it (username) is already in the system</description>
		<display-name>Email Validator</display-name>
		<validator-id>validateEmail</validator-id>
		<validator-class>com.scaha.validators.EmailValidator</validator-class>
	</validator>
	<validator>
		<description>This checks to see that the current password matches what is being typed on the screen</description>
		<display-name>Current Password Checker</display-name>
		<validator-id>validateLivePassword</validator-id>
		<validator-class>com.scaha.validators.LivePasswordValidator</validator-class>
	</validator>
	<validator>
		<description>This checks to see that the USAHNumber is Correct and not in the System Yet</description>
		<display-name>Check USAH Registration Number</display-name>
		<validator-id>validateUSAHRegistration</validator-id>
		<validator-class>com.scaha.validators.USAHRegistrationValidator</validator-class>
	</validator>
</faces-config>
